<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="KvmSwitch.Desktop.App"
             xmlns:local="using:KvmSwitch.Desktop"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>

    <TrayIcon.Icons>
        <TrayIcons>
            <TrayIcon Icon="/Assets/logo.ico"
                      ToolTipText="KVM Switch 2.0"
                      Clicked="TrayIcon_OnClicked">
                <TrayIcon.Menu>
                    <NativeMenu>
                        <NativeMenuItem Header="Show/Hide"
                                        Click="TrayIcon_ToggleWindow" />
                        <NativeMenuItem Header="Exit"
                                        Click="TrayIcon_Exit" />
                    </NativeMenu>
                </TrayIcon.Menu>
            </TrayIcon>
        </TrayIcons>
    </TrayIcon.Icons>
  
    <Application.Styles>
        <FluentTheme />
    </Application.Styles>
</Application>
